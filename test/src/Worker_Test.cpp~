#include "gtest/gtest.h"
#include <string>

#ifndef WORKER_H
#define "Worker.hpp"
#include "Worker.hpp"
#endif

class WorkerTest : public ::testing::Test {
    protected:
        virtual void setUp() {
	}

        virtual void TearDown() {
	}
};

TEST_F(WorkerTest, getName) {
    std::string name1 = "Steve";
    std::string name2 = "Carlos";
    std::string name3 = "Luigi";

    Worker worker1 = Worker(name1, 0);
    Worker worker2 = Worker(name2, 0);
    Worker worker3 = Worker(name3, 0);

    EXPECT_STREQ(name1, worker1.getName();
    EXPECT_STREQ(name2, worker2.getName();
    EXPECT_STREQ(name3, worker3.getName();
}

TEST_F(WorkerTest, getName) {
    int capacity1 = 4.0;
    int capacity2 = 0;
    int capacity3 = 10;

    Worker worker1 = Worker("Steve", capacity1);
    Worker worker2 = Worker("Steve", capacity2);
    Worker worker3 = Worker("Steve", capacity3);

    EXPECT_STREQ(capacity1, worker1.getCapacity();
    EXPECT_STREQ(capacity2, worker2.getCapacity();
    EXPECT_STREQ(capacity3, worker3.getCapacity();
}
